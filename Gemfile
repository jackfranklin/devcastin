source 'http://rubygems.org'

gem 'sinatra', require: 'sinatra/base'

gem 'omniauth'
gem 'omniauth-github'

gem 'dotenv'

gem 'mongoid'

gem 'stripe', :git => 'https://github.com/stripe/stripe-ruby'

group :development do
  gem 'shotgun'
end

group :test do
  gem 'rspec'
  gem 'database_cleaner', :github => 'bmabey/database_cleaner'
  gem 'mocha'
  gem 'factory_girl'
  gem 'rack-test'
end
